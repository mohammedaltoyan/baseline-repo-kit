{
  "name": "guidelines-baseline-kit",
  "version": "1.0.0",
  "description": "Reusable baseline kit: docs + ops tooling + repo guardrails (project-agnostic)",
  "scripts": {
    "test": "npm run lint:plans && npm run lint:pr-policy && npm run lint:auto-pr && npm run lint:release-pr && npm run lint:release-policy && npm run lint:deploy-guard && npm run lint:deploy-registry && npm run lint:branch-policy && npm run lint:docs && npm run lint:objectives && npm run lint:structure && npm run lint:installer && npm run lint:bootstrap && npm run lint:env",
    "lint:structure": "node scripts/tooling/check-structure.js",
    "lint:objectives": "node scripts/ops/objectives-lint.js",
    "lint:objectives:enforce": "OBJECTIVES_ENFORCE_RLS_MISSING=1 node scripts/ops/objectives-lint.js",
    "lint:plans": "node scripts/ops/plan-lint.selftest.js && node scripts/ops/plan-lint.js",
    "lint:pr-policy": "node scripts/ops/pr-policy.selftest.js && node scripts/ops/pr-policy-validate.selftest.js",
    "lint:auto-pr": "node scripts/ops/auto-pr-open.selftest.js",
    "lint:release-pr": "node scripts/ops/release-pr-open.selftest.js",
    "lint:release-policy": "node scripts/ops/release-policy-main.selftest.js",
    "lint:deploy-guard": "node scripts/ops/deploy-guard.selftest.js",
    "lint:deploy-registry": "node scripts/ops/deploy-surface-registry.selftest.js && node scripts/ops/deploy-env-resolve.selftest.js && node scripts/ops/approval-matrix.selftest.js && node scripts/ops/changed-surfaces.selftest.js && node scripts/ops/deploy-receipts.selftest.js && node scripts/ops/env-isolation-lint.selftest.js",
    "lint:branch-policy": "node scripts/ops/branch-policy.selftest.js",
    "lint:docs": "node scripts/tooling/docs-clean.js",
    "lint:installer": "node scripts/tooling/install-profiles.selftest.js && node scripts/tooling/baseline-install.selftest.js",
    "lint:bootstrap": "node scripts/tooling/baseline-bootstrap.selftest.js",
    "lint:env": "node scripts/utils/load-env.selftest.js",
    "test:deep": "node scripts/tooling/deep-verify.js",

    "docs:clean": "node scripts/tooling/docs-clean.js",
    "baseline:install": "node scripts/tooling/baseline-install.js",
    "baseline:bootstrap": "node scripts/tooling/baseline-bootstrap.js",

    "plans:verify": "node scripts/ops/plan-verify.js",
    "plans:index": "node scripts/ops/plan-index.js",
    "plans:focus": "node scripts/ops/plan-focus.js",
    "plans:new": "node scripts/ops/plans/flow.js new",
    "plans:advance": "node scripts/ops/plans/flow.js advance",
    "plans:complete": "node scripts/ops/plans/flow.js complete",
    "plans:archive": "node scripts/ops/plans/flow.js archive",
    "plans:archive:backlog": "node scripts/ops/plan-archive-backlog.js",
    "plans:summarize": "node scripts/ops/plan-summarize.js",
    "plans:objectives:gate:auto": "node scripts/ops/plan-objectives-auto.js",
    "plans:gate": "node scripts/ops/plan-gate.js",
    "plans:gate:full": "node scripts/ops/plan-gate-full.js",
    "plans:require:complete": "node scripts/ops/plan-require-complete.js",

    "pr:ready": "node scripts/ops/pr-ready.js"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "baseline",
    "starter-kit",
    "ci",
    "ops",
    "planning",
    "lint"
  ]
}
