{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://baseline-kit.local/schema/baseline-ui-metadata.schema.json",
  "title": "Baseline UI Metadata",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "sections",
    "fields",
    "capability_labels"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/sectionDefinition"
      }
    },
    "fields": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[a-z][a-z0-9_]*(\\.[a-z][a-z0-9_]*)*$": {
          "$ref": "#/definitions/fieldDefinition"
        }
      },
      "additionalProperties": false
    },
    "capability_labels": {
      "$ref": "#/definitions/capabilityLabelsDefinition"
    }
  },
  "definitions": {
    "sectionDefinition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "description"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_-]*$"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "fieldDefinition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "section",
        "what_this_controls",
        "why_it_matters",
        "default_behavior",
        "tradeoffs",
        "prerequisites",
        "apply_impact",
        "fallback_or_remediation"
      ],
      "properties": {
        "section": {
          "type": "string",
          "minLength": 1
        },
        "what_this_controls": {
          "type": "string",
          "minLength": 1
        },
        "why_it_matters": {
          "type": "string",
          "minLength": 1
        },
        "default_behavior": {
          "type": "string",
          "minLength": 1
        },
        "tradeoffs": {
          "type": "string",
          "minLength": 1
        },
        "prerequisites": {
          "type": "string",
          "minLength": 1
        },
        "apply_impact": {
          "type": "string",
          "minLength": 1
        },
        "fallback_or_remediation": {
          "type": "string",
          "minLength": 1
        },
        "capability_key": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "capabilityLabelsDefinition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "supported",
        "unsupported",
        "unknown"
      ],
      "properties": {
        "supported": {
          "type": "string",
          "minLength": 1
        },
        "unsupported": {
          "type": "string",
          "minLength": 1
        },
        "unknown": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
